@model ML.Aseguradora
@{
    ViewBag.Title = "GetAllAseguradora";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GetAllAseguradora</h2>

<div class="row">
    <div class="col-md-12">
        <h5>Seleccione una Aseguradora para editarla o + para agregar una nueva...</h5>
        <hr />
    </div>

</div>

@*<div class="row">*@
<div style="float:right;">
    @Html.ActionLink("+", "FormAseguradora", "Aseguradora", htmlAttributes: new { @class = "btn btn-success" })

</div>

<br>

<table class="table table-bordered table-responsive">
    <thead>
        <tr>
            <td>Editar</td>
            <td class="hidden">IdAseguradora</td>
            <td>Nombre</td>
            <td>FechaCreacion</td>
            <td>FechaModificacion</td>
            <td>IdUsuario</td>
            <td>Imagen</td>
            <td>Eliminar</td>
        </tr>
    </thead>
    <tbody>
        @foreach (ML.Aseguradora aseguradora in Model.Aseguradoras)
        {
            <tr>
                <td><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("FormAseguradora", "Aseguradora", new { IdAseguradora = aseguradora.IdAseguradora})"></a></td>
                <td class="hidden">@aseguradora.IdAseguradora</td>
                <td>@aseguradora.Nombre</td>
                <td>@aseguradora.FechaCreacion</td>
                <td>@aseguradora.FechaModificacion</td>
                <td>@aseguradora.Usuario.IdUsuario</td>
                <td>    @if (Model.Imagen != null)
                        {

                            <img id="Img" src="data:image/*;base64,Model.Imagen" style="width:auto ; height:100px" />

                        }
                        else
                        {
                            <img id="Img" src="~/images/defecto.jpg" style="width:auto ; height:100px" />
                        }
                        </td>    
                

                <td><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("DeleteAseguradora", "Aseguradora", new { IdAseguradora= aseguradora.IdAseguradora})" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"></a></td>
            </tr>
        }
    </tbody>
</table>